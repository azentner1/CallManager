<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/phone_call_log_item_height"
    android:paddingStart="@dimen/item_padding_standard"
    android:paddingEnd="@dimen/item_padding_standard"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivPhoneCallLogImage"
        android:layout_width="@dimen/item_image_standard"
        android:layout_height="@dimen/item_image_standard"
        android:layout_marginEnd="24dp"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@drawable/ic_phone"
        android:background="@drawable/round_image"/>

    <TextView
        android:id="@+id/txtPhoneCallLogCallerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivPhoneCallLogImage"
        android:layout_toEndOf="@+id/ivPhoneCallLogImage"
        android:layout_toStartOf="@+id/ivPhoneCallLogStatus"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/item_title"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/txtPhoneCallLogCallDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivPhoneCallLogImage"
        android:layout_toEndOf="@+id/ivPhoneCallLogImage"
        android:layout_toStartOf="@+id/ivPhoneCallLogStatus"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="@dimen/item_subtitle" />

    <ImageView
        android:id="@+id/ivPhoneCallLogStatus"
        android:layout_width="@dimen/item_image_standard"
        android:layout_height="@dimen/item_image_standard"
        android:layout_marginStart="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>