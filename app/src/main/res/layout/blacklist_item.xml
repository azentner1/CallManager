<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlBlacklistRoot"
    android:layout_width="match_parent"
    android:layout_height="@dimen/phone_call_log_item_height"
    android:paddingStart="@dimen/item_padding_standard"
    android:paddingEnd="@dimen/item_padding_standard"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivBlacklistImage"
        android:layout_width="@dimen/item_image_standard"
        android:layout_height="@dimen/item_image_standard"
        android:layout_marginEnd="24dp"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@drawable/ic_phone" />

    <TextView
        android:id="@+id/txtBlacklistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivBlacklistImage"
        android:layout_toEndOf="@+id/ivBlacklistImage"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/item_title"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/txtBlacklistPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivBlacklistImage"
        android:layout_toEndOf="@+id/ivBlacklistImage"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="@dimen/item_subtitle_bigger" />


    <TextView
        android:id="@+id/txtBlacklistPhoneEditHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/txtBlacklistPhoneNumber"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="10sp"
        android:text="@string/hold_to_edit"
        android:visibility="gone"/>


</RelativeLayout>